#ifndef __NUTOGUI_COMPAT_NULLPTR_H__
#define __NUTOGUI_COMPAT_NULLPTR_H__

// Based on http://www.open-std.org/jtc1/sc22/wg21/docs/papers/2004/n1601.pdf
namespace std
{
  class nullptr_t
  {
  public:
    template<class T>
    operator T*() const
    { return 0; }
    template<class C, class T>
    operator T C::*() const
    { return 0; }
  private:
    void operator&() const;
  };
} // namespace std

using ::std::nullptr_t;
const nullptr_t nullptr = {};

#endif // __NUTOGUI_COMPAT_NULLPTR_H__
